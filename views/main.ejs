<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Task Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  </head>
  <body>
    <header style="height: 160px">
      <h1 class="text-center mt-5">Welcome to Task Manager</h1>
    </header>
    <main class="d-flex justify-content-center">
      <div class="row">
        <div class="task-adder">
          <form class="input-group mb-3" action="/" method="post">
            <input type="text" id="title" name="title" class="form-control" placeholder="Add Task" aria-label="Add Task" aria-describedby="button-addon2" />
            <button type="submit" class="btn btn-primary" id="button-addon2">Add</button>
          </form>
        </div>
        <div class="col-md-8">
          <h2>Your Tasks</h2>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Task</th>
              </tr>
            </thead>
            <tbody>
              <% tasks.forEach((task,i) => { %>
              <tr>
                <th scope="row"><%= i+ 1%></th>
                <td><%= task.title %></td>
                <td>
                  <button class="btn btn-success badge">Edit</button>
                </td>
                <td>
                  <form action="/<%= task._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger badge">Delete</button>
                  </form>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
